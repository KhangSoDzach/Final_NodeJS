{
  "name": "source-computer",
  "version": "1.0.0",
  "description": "E-commerce website for computer components",
  "main": "app.js",
  "scripts": {
    "start": "node --no-deprecation app.js",
    "dev": "nodemon --no-deprecation app.js",
    "seed": "node seeders/admin-seeder.js && node seeders/demo-products-seeder.js && node seeders/coupons-seeder.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "frontend:dev": "vite",
    "frontend:build": "vite build",
    "frontend:preview": "vite preview",
    "docker:init": "node init-uploads.js",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:prod": "docker compose up -d --build",
    "docker:prod:logs": "docker compose logs -f",
    "docker:prod:down": "docker compose down",
    "docker:clean": "docker compose down -v && docker system prune -f"
  },
  "dependencies": {
    "@studio-freight/lenis": "^1.0.42",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.22.1",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "framer-motion": "^12.33.0",
    "gsap": "^3.14.2",
    "helmet": "^7.0.0",
    "method-override": "^3.0.0",
    "mongoose": "^7.8.6",
    "mongoose-sequence": "^5.3.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.13",
    "nodemon": "^2.0.22",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.15.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "three": "^0.182.0",
    "uuid": "^9.0.0",
    "validator": "^13.15.26",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=24.13.1",
    "npm": ">=11.0.0"
  }
}