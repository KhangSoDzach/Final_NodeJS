<div class="user-dashboard">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <%- include('../partials/user-sidebar') %>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9">
                <div class="dashboard-content">
                    <h2><i class="fas fa-calendar-check"></i> Đơn đặt trước</h2>
                    
                    <% if (preOrders && preOrders.length > 0) { %>
                        <div class="pre-orders-list">
                            <% preOrders.forEach(preOrder => { %>
                                <div class="pre-order-item <%= preOrder.status %>">
                                    <div class="pre-order-product">
                                        <% if (preOrder.product) { %>
                                            <div class="product-image">
                                                <a href="/products/<%= preOrder.product.slug %>">
                                                    <img src="/uploads/products/<%= preOrder.product.images && preOrder.product.images[0] ? preOrder.product.images[0] : 'default.jpg' %>" 
                                                         alt="<%= preOrder.product.name %>">
                                                </a>
                                            </div>
                                            <div class="product-info">
                                                <h4>
                                                    <a href="/products/<%= preOrder.product.slug %>">
                                                        <%= preOrder.product.name %>
                                                    </a>
                                                </h4>
                                                <% if (preOrder.variant && preOrder.variant.name) { %>
                                                    <p class="variant"><%= preOrder.variant.name %>: <%= preOrder.variant.value %></p>
                                                <% } %>
                                                <p class="quantity">Số lượng: <%= preOrder.quantity %></p>
                                                <p class="price">
                                                    Giá đặt trước: 
                                                    <strong><%= preOrder.priceAtOrder.toLocaleString('vi-VN') %>đ</strong>
                                                </p>
                                            </div>
                                        <% } else { %>
                                            <div class="product-info">
                                                <h4 class="text-muted">Sản phẩm không còn tồn tại</h4>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="pre-order-status">
                                        <div class="status-badge status-<%= preOrder.status %>">
                                            <% if (preOrder.status === 'pending') { %>
                                                <i class="fas fa-clock"></i> Đang chờ hàng
                                            <% } else if (preOrder.status === 'notified') { %>
                                                <i class="fas fa-bell"></i> Đã thông báo
                                            <% } else if (preOrder.status === 'converted') { %>
                                                <i class="fas fa-check-circle"></i> Đã chuyển thành đơn hàng
                                            <% } else if (preOrder.status === 'cancelled') { %>
                                                <i class="fas fa-times-circle"></i> Đã hủy
                                            <% } else if (preOrder.status === 'expired') { %>
                                                <i class="fas fa-hourglass-end"></i> Đã hết hạn
                                            <% } %>
                                        </div>
                                        
                                        <% if (preOrder.status === 'notified' && preOrder.notificationExpiry) { %>
                                            <p class="expiry-info">
                                                <i class="fas fa-exclamation-triangle"></i>
                                                Hết hạn: <%= new Date(preOrder.notificationExpiry).toLocaleString('vi-VN') %>
                                            </p>
                                        <% } %>
                                        
                                        <p class="date">
                                            Đặt ngày: <%= new Date(preOrder.createdAt).toLocaleDateString('vi-VN') %>
                                        </p>
                                    </div>
                                    
                                    <div class="pre-order-actions">
                                        <% if (preOrder.status === 'pending' || preOrder.status === 'notified') { %>
                                            <% if (preOrder.status === 'notified' && preOrder.product) { %>
                                                <a href="/products/<%= preOrder.product.slug %>" class="btn btn-primary">
                                                    <i class="fas fa-shopping-cart"></i> Mua ngay
                                                </a>
                                            <% } %>
                                            <button type="button" class="btn btn-outline-danger btn-cancel-preorder" 
                                                    data-id="<%= preOrder._id %>">
                                                <i class="fas fa-times"></i> Hủy
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-calendar-check"></i>
                            <h3>Chưa có đơn đặt trước</h3>
                            <p>Bạn có thể đặt trước các sản phẩm đang hết hàng để nhận thông báo khi có hàng.</p>
                            <a href="/products" class="btn btn-primary">Xem sản phẩm</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.pre-orders-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.pre-order-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
}

.pre-order-item:hover {
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.pre-order-item.cancelled,
.pre-order-item.expired {
    opacity: 0.6;
}

.pre-order-product {
    display: flex;
    gap: 15px;
    flex: 1;
}

.pre-order-product .product-image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
}

.pre-order-product .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.pre-order-product .product-info h4 {
    margin: 0 0 5px;
    font-size: 16px;
}

.pre-order-product .product-info h4 a {
    color: #333;
    text-decoration: none;
}

.pre-order-product .product-info h4 a:hover {
    color: #3b82f6;
}

.pre-order-product .product-info p {
    margin: 3px 0;
    font-size: 14px;
    color: #666;
}

.pre-order-product .product-info .price strong {
    color: #dc2626;
}

.pre-order-status {
    text-align: center;
    padding: 0 20px;
}

.status-badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
}

.status-pending {
    background: #fef3c7;
    color: #d97706;
}

.status-notified {
    background: #dcfce7;
    color: #16a34a;
}

.status-converted {
    background: #dbeafe;
    color: #2563eb;
}

.status-cancelled,
.status-expired {
    background: #f3f4f6;
    color: #6b7280;
}

.expiry-info {
    color: #dc2626;
    font-size: 12px;
    margin-top: 5px;
}

.pre-order-status .date {
    font-size: 12px;
    color: #888;
    margin-top: 5px;
}

.pre-order-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.pre-order-actions .btn {
    white-space: nowrap;
}

.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #888;
}

.empty-state i {
    font-size: 60px;
    margin-bottom: 20px;
    color: #ddd;
}

.empty-state h3 {
    margin-bottom: 10px;
    color: #333;
}

@media (max-width: 768px) {
    .pre-order-item {
        flex-direction: column;
        gap: 15px;
    }
    
    .pre-order-status {
        padding: 10px 0;
    }
    
    .pre-order-actions {
        flex-direction: row;
        width: 100%;
    }
    
    .pre-order-actions .btn {
        flex: 1;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Cancel pre-order
    document.querySelectorAll('.btn-cancel-preorder').forEach(btn => {
        btn.addEventListener('click', async function() {
            if (!confirm('Bạn có chắc muốn hủy đơn đặt trước này?')) return;
            
            const preOrderId = this.dataset.id;
            
            try {
                const response = await fetch(`/products/pre-order/${preOrderId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Đã hủy đơn đặt trước');
                    window.location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi hủy đặt trước');
            }
        });
    });
});
</script>
