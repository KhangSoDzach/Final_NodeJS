<%- include('../partials/header') %>
<div class="container checkout-page">
  <h1>Thanh toán</h1>
  <div class="checkout-grid">
    <!-- Thông tin giỏ hàng -->
    <div class="checkout-details">
      <div class="checkout-section">
        <h2>Giỏ hàng của bạn</h2>
        <% if (cart && cart.items.length > 0) { %>
          <table class="summary-table">
            <thead>
              <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
              </tr>
            </thead>
            <tbody>
              <% cart.items.forEach(item => { %>
                <tr>
                  <td><%= item.product.name %></td>
                  <td><%= item.quantity %></td>
                  <td><%= (item.price * item.quantity).toLocaleString('vi-VN') %> VND</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>Giỏ hàng của bạn đang trống.</p>
        <% } %>
      </div>
    </div>

    <!-- Địa chỉ giao hàng -->
    <div class="checkout-details">
      <div class="checkout-section">
        <h2>Địa chỉ giao hàng</h2>
        <form action="/orders/checkout" method="POST">
          <div class="form-group">
            <label for="name">Họ và tên</label>
            <input type="text" id="name" name="name" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="address">Địa chỉ</label>
            <input type="text" id="address" name="address" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="phone">Số điện thoại</label>
            <input type="text" id="phone" name="phone" class="form-control" required>
          </div>
      </div>

      <!-- Phương thức thanh toán -->
      <div class="checkout-section">
        <h2>Phương thức thanh toán</h2>
        <div class="form-group">
          <label>
            <input type="radio" name="paymentMethod" value="cod" required> Thanh toán khi nhận hàng (COD)
          </label>
        </div>
        <div class="form-group">
          <label>
            <input type="radio" name="paymentMethod" value="online" required> Thanh toán trực tuyến
          </label>
        </div>
      </div>

      <!-- Nút xác nhận -->
      <div class="checkout-actions">
        <button type="submit" class="btn btn-primary checkout-button">Xác nhận thanh toán</button>
        <a href="/cart" class="btn btn-secondary back-to-cart">Quay lại giỏ hàng</a>
      </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>