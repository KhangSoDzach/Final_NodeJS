    }

    p a:hover,
    p a:focus {
      color: var(--primary-color-dark);
      outline: none;
      text-decoration: underline;
    }

    a.btn {
      display: inline-block;
      background-color: var(--primary-color);
      color: white;
      padding: 0.75em 2em;
      font-size: var(--font-size-base);
      font-weight: var(--font-weight-semibold);
