
<div class="container">
  <h1>Lịch sử đơn hàng</h1>
  <% if (orders.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Mã đơn hàng</th>
          <th>Ngày đặt</th>
          <th>Tổng tiền</th>
          <th>Trạng thái</th>
          <th>Chi tiết</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order._id %></td>
            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
            <td><%= order.totalAmount.toLocaleString('vi-VN') %> VND</td>
            <td><%= order.status %></td>
            <td><a href="/orders/track/<%= order._id %>">Xem chi tiết</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>Bạn chưa có đơn hàng nào.</p>
  <% } %>
</div>
<style>
    table {
      width: 100%;
      border-collapse: collapse;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      font-size: 1rem;
      color: #23272e;
      user-select: none;
    }

    thead tr {
      background-color: #f3f4f6;
    }

    th, td {
      padding: 0.75rem 1rem;
      border: 1px solid #e0e0e0;
      text-align: left;
      vertical-align: middle;
      white-space: nowrap;
    }

    th {
      font-weight: 600;
    }

    tbody tr:nth-child(even) {
      background-color: #f9fafb;
    }

    tbody tr:hover {
      background-color: #f1f5f9;
      transition: background-color 0.2s ease;
    }

    a {
      color: #2196f3;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    a:hover,
    a:focus {
      color: #1769aa;
      outline: none;
      text-decoration: underline;
    }

    p {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      font-size: 1rem;
      color: #6b7280;
      text-align: center;
      margin-top: 1.5rem;
      user-select: none;
    }

    /* Responsive */
    @media (max-width: 768px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }

      thead tr {
        position: absolute;
        top: -9999px;
        left: -9999px;
      }

      tr {
        margin-bottom: 1.5rem;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1rem;
      }

      td {
        border: none;
        border-bottom: 1px solid #e0e0e0;
        position: relative;
        padding-left: 50%;
        white-space: normal;
        text-align: left;
      }

      td:last-child {
        border-bottom: 0;
      }

      td:before {
        position: absolute;
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
        font-weight: 600;
        color: #6b7280;
        white-space: nowrap;
        user-select: none;
      }

      td:nth-of-type(1):before { content: "Mã đơn hàng"; }
      td:nth-of-type(2):before { content: "Ngày đặt"; }
      td:nth-of-type(3):before { content: "Tổng tiền"; }
      td:nth-of-type(4):before { content: "Trạng thái"; }
      td:nth-of-type(5):before { content: "Chi tiết"; }
    }
  </style>
