<div class="payment-page">
    <div class="page-header">
        <h1>Thanh toán đơn hàng #<%= order.orderNumber %></h1>
    </div>
    
    <div class="payment-container">
        <form action="/orders/pay/<%= order._id %>" method="POST" id="payment-form">
            <div class="payment-grid">
                <div class="payment-details">
                    <div class="info-card">
                        <h3>Thông tin đơn hàng</h3>
                        <p><strong>Mã đơn hàng:</strong> #<%= order.orderNumber %></p>
                        <p><strong>Ngày đặt:</strong> <%= new Date(order.createdAt).toLocaleDateString('vi-VN') %></p>
                        <p><strong>Tổng tiền:</strong> <%= order.totalAmount.toLocaleString('vi-VN') %> ₫</p>
                    </div>
                    
                    <div class="info-card">
                        <h3>Phương thức thanh toán</h3>
                        <div class="payment-methods">
                            <div class="payment-method">
                                <input type="radio" id="cod" name="paymentMethod" value="cod" <%= order.paymentMethod === 'cod' ? 'checked' : '' %>>
                                <label for="cod">
                                    <i class="fas fa-money-bill-wave"></i>
                                    Thanh toán khi nhận hàng (COD)
                                </label>
                            </div>
                            
                            <div class="payment-method">
                                <input type="radio" id="bank_transfer" name="paymentMethod" value="bank_transfer" <%= order.paymentMethod === 'bank_transfer' ? 'checked' : '' %>>
                                <label for="bank_transfer">
                                    <i class="fas fa-university"></i>
                                    Chuyển khoản ngân hàng
                                </label>
                                <div class="payment-details bank-transfer-details" style="display: none;">
                                    <p>Vui lòng chuyển khoản đến tài khoản sau:</p>
                                    <p><strong>Ngân hàng:</strong> Vietcombank</p>
                                    <p><strong>Số tài khoản:</strong> 1234567890</p>
                                    <p><strong>Chủ tài khoản:</strong> Source Computer</p>
                                    <p><strong>Nội dung:</strong> Thanh toán đơn hàng #<%= order.orderNumber %></p>
                                </div>
                            </div>
                            
                            <div class="payment-method">
                                <input type="radio" id="credit_card" name="paymentMethod" value="credit_card" <%= order.paymentMethod === 'credit_card' ? 'checked' : '' %>>
                                <label for="credit_card">
                                    <i class="fas fa-credit-card"></i>
                                    Thẻ tín dụng / Thẻ ghi nợ
                                </label>
                                <div class="payment-details credit-card-details" style="display: none;">
                                    <div class="form-group">
                                        <label>Số thẻ</label>
                                        <input type="text" id="card_number" name="card_number" placeholder="1234 5678 9012 3456" required>
                                    </div>
                                    
                                    <div class="card-info-grid">
                                        <div class="form-group">
                                            <label>Tên trên thẻ</label>
                                            <input type="text" id="card_name" name="card_name" placeholder="NGUYEN VAN A" required>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Hết hạn</label>
                                            <input type="text" id="card_expiry" name="card_expiry" placeholder="MM/YY" required>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>CVV</label>
                                            <input type="text" id="card_cvv" name="card_cvv" placeholder="123" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="order-summary">
                    <div class="summary-card">
                        <h3>Tóm tắt đơn hàng</h3>
                        
                        <div class="summary-items">
                            <% order.items.forEach(item => { %>
                                <div class="summary-item">
                                    <div class="item-info">
                                        <div>
                                            <h4><%= item.name %></h4>
                                            <% if (item.variant) { %>
                                                <p class="item-variant"><%= item.variant.name %>: <%= item.variant.value %></p>
                                            <% } %>
                                            <p class="item-price"><%= item.price.toLocaleString('vi-VN') %> ₫ x <%= item.quantity %></p>
                                        </div>
                                    </div>
                                    <div class="item-subtotal">
                                        <%= (item.price * item.quantity).toLocaleString('vi-VN') %> ₫
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        
                        <div class="summary-totals">
                            <div class="summary-row">
                                <span>Tạm tính</span>
                                <span>
                                    <% const subtotal = order.items.reduce((total, item) => total + (item.price * item.quantity), 0); %>
                                    <%= subtotal.toLocaleString('vi-VN') %> ₫
                                </span>
                            </div>
                            
                            <% if (order.discount > 0) { %>
                                <div class="summary-row discount">
                                    <span>Giảm giá (<%= order.couponCode %> - <%= order.discount %>%)</span>
                                    <span>-<%= Math.round(subtotal * order.discount / 100).toLocaleString('vi-VN') %> ₫</span>
                                </div>
                            <% } %>
                            
                            <% if (order.loyaltyPointsUsed > 0) { %>
                                <div class="summary-row discount">
                                    <span>Điểm tích lũy (<%= order.loyaltyPointsUsed %> điểm)</span>
                                    <span>-<%= (order.loyaltyPointsUsed * 1000).toLocaleString('vi-VN') %> ₫</span>
                                </div>
                            <% } %>
                            
                            <div class="summary-row total">
                                <span>Tổng cộng</span>
                                <span><%= order.totalAmount.toLocaleString('vi-VN') %> ₫</span>
                            </div>
                        </div>
                        
                        <div class="checkout-actions">
                            <button type="submit" class="btn btn-primary btn-block" id="place-order-btn">Thanh toán ngay</button>
                            <a href="/orders/<%= order._id %>" class="back-to-order">
                                <i class="fas fa-arrow-left"></i> Quay lại chi tiết đơn hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
.payment-page {
    margin-bottom: var(--spacing-xxl);
}

.payment-container {
    max-width: 1200px;
    margin: 0 auto;
}

.payment-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-xl);
}

.payment-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
}

.info-card {
    background-color: white;
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
}

.info-card h3 {
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--light-grey);
}

.payment-method {
    margin-bottom: var(--spacing-md);
    padding: var(--spacing-md);
    border: 1px solid var(--light-grey);
    border-radius: var(--border-radius-sm);
}

.payment-method label {
    display: flex;
    align-items: center;
    margin-bottom: 0;
    cursor: pointer;
}

.payment-method label i {
    margin-right: var(--spacing-sm);
}

.payment-details {
    margin-top: var(--spacing-md);
    padding: var(--spacing-md);
    background-color: var(--lighter-grey);
    border-radius: var(--border-radius-sm);
}

.card-info-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: var(--spacing-sm);
}

@media (max-width: 992px) {
    .payment-grid {
        grid-template-columns: 1fr;
    }
}
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle payment method selection
        const paymentMethods = document.querySelectorAll('input[name="paymentMethod"]');
        paymentMethods.forEach(method => {
            method.addEventListener('change', function() {
                // Hide all payment details
                document.querySelectorAll('.payment-details').forEach(el => {
                    el.style.display = 'none';
                });
                
                // Show selected payment details
                const detailsEl = document.querySelector(`.${this.value}-details`);
                if (detailsEl) {
                    detailsEl.style.display = 'block';
                }
            });
        });
        
        // Trigger change event on the checked radio button to show/hide payment details
        const checkedMethod = document.querySelector('input[name="paymentMethod"]:checked');
        if (checkedMethod) {
            const event = new Event('change');
            checkedMethod.dispatchEvent(event);
        }
        
        // Form validation
        const paymentForm = document.getElementById('payment-form');
        const submitButton = document.getElementById('place-order-btn');
        
        paymentForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Disable button to prevent double submission
            submitButton.disabled = true;
            submitButton.textContent = 'Đang xử lý...';
            
            const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            
            if (paymentMethod === 'credit_card') {
                const cardNumber = document.getElementById('card_number').value;
                const cardName = document.getElementById('card_name').value;
                const cardExpiry = document.getElementById('card_expiry').value;
                const cardCvv = document.getElementById('card_cvv').value;
                
                if (!cardNumber || !cardName || !cardExpiry || !cardCvv) {
                    alert('Vui lòng điền đầy đủ thông tin thẻ thanh toán.');
                    submitButton.disabled = false;
                    submitButton.textContent = 'Thanh toán ngay';
                    return;
                }
                
                // Basic card format validations
                if (!/^\d{13,19}$/.test(cardNumber.replace(/\s/g, ''))) {
                    alert('Số thẻ không hợp lệ.');
                    submitButton.disabled = false;
                    submitButton.textContent = 'Thanh toán ngay';
                    return;
                }
                
                if (!/^\d{3,4}$/.test(cardCvv)) {
                    alert('Mã CVV không hợp lệ.');
                    submitButton.disabled = false;
                    submitButton.textContent = 'Thanh toán ngay';
                    return;
                }
                
                if (!/^\d{2}\/\d{2}$/.test(cardExpiry)) {
                    alert('Định dạng ngày hết hạn không hợp lệ (MM/YY).');
                    submitButton.disabled = false;
                    submitButton.textContent = 'Thanh toán ngay';
                    return;
                }
            }
            
            // Everything is valid, submit the form
            paymentForm.submit();
        });
    });
</script>