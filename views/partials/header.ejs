<header>
    <div class="container">
        <div class="top-header">
            <div class="logo">
                <a href="/">
                    <h1>Source Computer</h1>
                </a>
            </div>
            
            <!-- <div class="mobile-nav-toggle">
                <button class="nav-toggle" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
            </div> -->
            
            <div class="search-bar">
                <form action="/products" method="GET" id="search-form">
                    <input type="text" 
                           name="search" 
                           id="search-input"
                           placeholder="Tìm kiếm sản phẩm..." 
                           value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                           autocomplete="off">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
                <div id="search-suggestions" class="search-suggestions" style="display: none;"></div>
            </div>
              <div class="user-actions">
                <!-- Compare Button -->
                <a href="/compare" class="compare-icon" title="So sánh sản phẩm">
                    <i class="fas fa-balance-scale"></i>
                    <span class="compare-count badge bg-primary" style="display: none;">0</span>
                </a>
                
                <!-- Wishlist Button (chỉ hiển thị khi đã đăng nhập) -->
                <% if (typeof user !== 'undefined' && user) { %>
                <a href="/user/wishlist" class="wishlist-icon" title="Danh sách yêu thích">
                    <i class="fas fa-heart"></i>
                    <span class="wishlist-count badge bg-danger" style="display: none;">0</span>
                </a>
                <% } %>
                
                <a href="/cart" class="cart-icon">
                    <i class="fas fa-shopping-cart"></i>
                    <% if (typeof cart !== 'undefined' && cart && cart.items && cart.items.length > 0) { %>
                        <span class="cart-count"><%= cart.items.length %></span>
                    <% } %>
                </a>
                
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="dropdown">
                        <a href="/user/profile" class="dropdown-toggle">
                            <i class="fas fa-user"></i> <%= user.name %>
                        </a>
                        <div class="dropdown-content">
                            <a href="/user/profile">Thông tin tài khoản</a>
                            <a href="/user/orders">Đơn hàng của tôi</a>
                            <a href="/user/wishlist"><i class="fas fa-heart text-danger"></i> Yêu thích</a>
                            <a href="/user/addresses">Địa chỉ</a>
                            <a href="/user/loyalty-points">Điểm tích lũy</a>
                            <% if (user.role === 'admin') { %>
                                <a href="/admin">Quản trị</a>
                            <% } %>
                            <a href="/auth/logout">Đăng xuất</a>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/auth/login"><i class="fas fa-sign-in-alt"></i> Đăng nhập</a>
                    <a href="/auth/register"><i class="fas fa-user-plus"></i> Đăng ký</a>
                <% } %>
            </div>
        </div>
    </div>
    
    <nav class="main-nav">
        <div class="container">
            <ul class="nav-list">
                <li><a href="/"><i class="fas fa-home"></i> Trang chủ</a></li>
                
                <li class="dropdown">
                    <a href="/products">
                        <i class="fas fa-laptop"></i> Sản phẩm <i class="fas fa-angle-down"></i>
                    </a>
                    <div class="dropdown-content">
                        <a href="/products?category=laptop">Laptop</a>
                        <a href="/products?category=pc">PC</a>
                        <a href="/products?category=monitor">Màn hình</a>
                        <a href="/products?category=component">Linh kiện</a>
                    </div>
                </li>
                
                <li><a href="/products?category=laptop"><i class="fas fa-laptop"></i> Laptop</a></li>
                <li><a href="/products?category=pc"><i class="fas fa-desktop"></i> PC</a></li>
                <li><a href="/products?category=monitor"><i class="fas fa-tv"></i> Màn hình</a></li>
                <li><a href="/products?category=component"><i class="fas fa-microchip"></i> Linh kiện</a></li>
                <li><a href="/products?category=accessory"><i class="fas fa-keyboard"></i> Phụ kiện</a></li>
                
            </ul>
        </div>
    </nav>
</header>
