<header>
    <div class="container">
        <div class="top-header">
            <div class="logo">
                <a href="/">
                    <h1>Source Computer</h1>
                </a>
            </div>
            
            <!-- <div class="mobile-nav-toggle">
                <button class="nav-toggle" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
            </div> -->
            
            <div class="search-bar">
                <form action="/products" method="GET" id="search-form">
                    <input type="text" 
                           name="search" 
                           id="search-input"
                           placeholder="<%= typeof __ === 'function' ? __('common.searchPlaceholder') : 'Tìm kiếm sản phẩm...' %>" 
                           value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                           autocomplete="off">
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
                <div id="search-suggestions" class="search-suggestions" style="display: none;"></div>
            </div>
              <div class="user-actions">
                <!-- Language/Currency Switcher -->
                <div class="locale-switcher-compact">
                    <%- include('language-switcher') %>
                </div>
                
                <!-- Compare Button -->
                <a href="/compare" class="compare-icon" title="<%= typeof __ === 'function' ? __('nav.compare') : 'So sánh sản phẩm' %>">
                    <i class="fas fa-balance-scale"></i>
                    <span class="compare-count badge bg-primary" style="display: none;">0</span>
                </a>
                
                <!-- Wishlist Button (chỉ hiển thị khi đã đăng nhập) -->
                <% if (typeof user !== 'undefined' && user) { %>
                <a href="/user/wishlist" class="wishlist-icon" title="<%= typeof __ === 'function' ? __('nav.wishlist') : 'Danh sách yêu thích' %>">
                    <i class="fas fa-heart"></i>
                    <span class="wishlist-count badge bg-danger" style="display: none;">0</span>
                </a>
                <% } %>
                
                <a href="/cart" class="cart-icon">
                    <i class="fas fa-shopping-cart"></i>
                    <% if (typeof cart !== 'undefined' && cart && cart.items && cart.items.length > 0) { %>
                        <span class="cart-count"><%= cart.items.length %></span>
                    <% } %>
                </a>
                
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="dropdown">
                        <a href="/user/profile" class="dropdown-toggle">
                            <i class="fas fa-user"></i> <%= user.name %>
                        </a>
                        <div class="dropdown-content">
                            <a href="/user/profile"><%= typeof __ === 'function' ? __('user.personalInfo') : 'Thông tin tài khoản' %></a>
                            <a href="/user/orders"><%= typeof __ === 'function' ? __('order.orderHistory') : 'Đơn hàng của tôi' %></a>
                            <a href="/user/wishlist"><i class="fas fa-heart text-danger"></i> <%= typeof __ === 'function' ? __('user.wishlist') : 'Yêu thích' %></a>
                            <a href="/user/addresses"><%= typeof __ === 'function' ? __('user.addresses') : 'Địa chỉ' %></a>
                            <a href="/user/loyalty-points"><%= typeof __ === 'function' ? __('user.loyaltyPoints') : 'Điểm tích lũy' %></a>
                            <% if (user.role === 'admin') { %>
                                <a href="/admin">Quản trị</a>
                            <% } %>
                            <a href="/auth/logout"><%= typeof __ === 'function' ? __('auth.logout') : 'Đăng xuất' %></a>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/auth/login"><i class="fas fa-sign-in-alt"></i> <%= typeof __ === 'function' ? __('auth.login') : 'Đăng nhập' %></a>
                    <a href="/auth/register"><i class="fas fa-user-plus"></i> <%= typeof __ === 'function' ? __('auth.register') : 'Đăng ký' %></a>
                <% } %>
            </div>
        </div>
    </div>
    
    <nav class="main-nav">
        <div class="container">
            <ul class="nav-list">
                <li><a href="/"><i class="fas fa-home"></i> <%= typeof __ === 'function' ? __('nav.home') : 'Trang chủ' %></a></li>
                
                <li class="dropdown">
                    <a href="/products">
                        <i class="fas fa-laptop"></i> <%= typeof __ === 'function' ? __('nav.shop') : 'Sản phẩm' %> <i class="fas fa-angle-down"></i>
                    </a>
                    <div class="dropdown-content">
                        <a href="/products?category=laptop"><%= typeof __ === 'function' ? __('nav.laptop') : 'Laptop' %></a>
                        <a href="/products?category=pc"><%= typeof __ === 'function' ? __('nav.pc') : 'PC' %></a>
                        <a href="/products?category=monitor"><%= typeof __ === 'function' ? __('nav.monitors') : 'Màn hình' %></a>
                        <a href="/products?category=component"><%= typeof __ === 'function' ? __('nav.components') : 'Linh kiện' %></a>
                    </div>
                </li>
                
                <li><a href="/products?category=laptop"><i class="fas fa-laptop"></i> <%= typeof __ === 'function' ? __('nav.laptop') : 'Laptop' %></a></li>
                <li><a href="/products?category=pc"><i class="fas fa-desktop"></i> <%= typeof __ === 'function' ? __('nav.pc') : 'PC' %></a></li>
                <li><a href="/products?category=monitor"><i class="fas fa-tv"></i> <%= typeof __ === 'function' ? __('nav.monitors') : 'Màn hình' %></a></li>
                <li><a href="/products?category=component"><i class="fas fa-microchip"></i> <%= typeof __ === 'function' ? __('nav.components') : 'Linh kiện' %></a></li>
                <li><a href="/products?category=accessory"><i class="fas fa-keyboard"></i> <%= typeof __ === 'function' ? __('nav.accessories') : 'Phụ kiện' %></a></li>
                
            </ul>
        </div>
    </nav>
</header>
